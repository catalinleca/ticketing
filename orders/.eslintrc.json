{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/prefer-default-export": "off",
        "import/extensions": "off",
        "no-underscore-dangle": "off",
        "import/no-extraneous-dependencies": "off",
        "no-console": "off",
        "quotes": [
            2,
            "double",
            {
                "avoidEscape": true
            }
        ],
        "no-unused-vars": "off",
        "no-param-reassign": "off",
        "no-use-before-define": "off",
        "no-undef": "off"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".ts"
                ]
            }
        }
    }
}
